{
  "name": "@droidsolutions-oss/semantic-release-update-file",
  "version": "1.0.3",
  "description": "Semantic Release plugin to help with updating files during release.",
  "main": "dist/index.js",
  "files": [
    "dist/index.js",
    "dist/lib/**/*.js"
  ],
  "engines": {
    "node": ">= 14.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "coverage": "nyc mocha test/**/*.test.ts",
    "build": "tsc",
    "lint": "eslint --ext ts .",
    "test": "mocha test/**/*.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/droidsolutions/semantic-release-update-file.git"
  },
  "keywords": [
    "semantic",
    "semantic-release",
    "release",
    "file",
    "version",
    "semantic-version",
    "plugin",
    "semantic-release-plugin"
  ],
  "author": "Stefan IÃŸmer <stefan.issmer@droidsolutions.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/droidsolutions/semantic-release-update-file/issues"
  },
  "homepage": "https://github.com/droidsolutions/semantic-release-update-file#readme",
  "dependencies": {
    "aggregate-error": "^3.1.0",
    "lodash.template": "^4.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@types/aggregate-error": "^1.0.1",
    "@types/chai": "^4.2.18",
    "@types/chai-as-promised": "^7.1.4",
    "@types/lodash.template": "^4.5.0",
    "@types/mocha": "^9.0.0",
    "@types/semantic-release": "^17.2.0",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-mocha": "^10.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.0.2",
    "mocha": "^9.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.3.0",
    "semantic-release": "^18.0.0",
    "sinon": "^12.0.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --ext ts,js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "mocha": {
    "extension": [
      ".ts",
      ".js"
    ],
    "recursive": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "nyc": {
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "lib/**/*.ts"
    ],
    "reporter": [
      "html",
      "text"
    ]
  }
}
